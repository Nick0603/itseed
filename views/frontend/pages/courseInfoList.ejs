<section class="course-top section-courseInfoList">
  <div class="sub-nav">
    <ul>
      <li>
        <a class="active" href="/courseInfo">講座課程</a>
      </li> |
      <li>
        <a href="/businessVisit">企業參訪</a>
      </li> |
      <li>
        <a href="/tuv">六大專案</a>
      </li>
    </ul>
  </div>
  <br>
  <div class="six-hg-title">
    <div class="six-hg-tit course-head">
      <span>講座課程</span>
    </div>
  </div>
  <div class="row">
    <% for(var i = 0; i < datas.length; i++){ %>
      <div class="col-sm-6 eachcourse">
        <a href="<%= url + datas[i].id %>">
          <div class="course-pic">
            <img src="<%= datas[i].photo %>">
          </div>
          <div>
            <p class="course-title">
              「<%= datas[i].title %>」
              <br>
              <span>講師：<%= datas[i].speaker %><!-- <%= datas[i].speakerTitle %> --></span>
              <!-- <span>課程重點</span> -->
            </p>
            <div class="course-content">
              <p class="course-content-part">
                課程介紹
                <!-- <%- datas[i].content %> -->
                <span style="float: right;">（繼續閱讀）</span>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
    <!-- <div class="col-xs-12 text-xs-center top"><span class="top-box">回到最上</span></div> -->
  </div>
</section>
